@code {
    Events? events;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    private string ActivitiesDisplay { get; set; } = "display:block;";
    private string ResultsDisplay { get; set; } = "display:none;";

    private string ActivitiesBtnStyle { get; set; } = "border: solid 1px blue;border-width:0 0 2px 0;";
    private string ResultsBtnStyle { get; set; } = "border:none;";

    protected override async Task OnInitializedAsync()
    {
        events = await DB.Events.FirstOrDefaultAsync(m => m.Id == Id);

        if (events is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    void ActivitiesClicked()
    {
        ActivitiesDisplay = "display:block";
        ResultsDisplay = "display:none;";

        ActivitiesBtnStyle = "border: solid 1px blue;border-width:0 0 2px 0;";
        ResultsBtnStyle = "border:none;";
    }
    void ResultsClicked()
    {
        ActivitiesDisplay = "display:none";
        ResultsDisplay = "display:block;";

        ActivitiesBtnStyle = "border:none;";
        ResultsBtnStyle = "border: solid 1px blue;border-width:0 0 2px 0;";
    }
}
